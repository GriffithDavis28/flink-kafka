<configuration>
    <property name="errorPath" value="${ERROR_LOG:-logs/error.log}" />

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${errorPath}</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>
